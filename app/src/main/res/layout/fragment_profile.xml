<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".dashboard.ProfileFragment">


    <RelativeLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="32dp"
            android:background="@android:color/white"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/progressbar_general_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <RelativeLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_background_rounded"
            android:elevation="8dp"
            android:paddingHorizontal="24dp"
            android:paddingTop="@dimen/header_vertical_padding"
            android:paddingBottom="20dp">


            <ImageView
                android:id="@+id/backToPreviousPageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/edit_profile_nav_content_desc"
                android:src="@drawable/ic_white_arrow_back_24" />


            <TextView
                android:id="@+id/historyDetailTitle"
                style="@style/fragment_header_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/backToPreviousPageButton"
                android:text="@string/profile_hyperlink"
                android:textColor="@color/defaultWhite"
                app:layout_constraintTop_toTopOf="parent" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/headerLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:layout_marginTop="16dp">

                            <TextView
                                android:id="@+id/tv_profile_fullname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:layout_toStartOf="@+id/btn_navigate_to_edit_profile"
                                android:text="@string/sample_name_text"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_profile_user_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_profile_fullname"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="16dp"
                                android:layout_toStartOf="@+id/btn_navigate_to_edit_profile"
                                android:text="@string/sample_user_name"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/tv_profile_memberID"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_profile_user_name"
                                android:layout_marginTop="2dp"
                                android:layout_marginEnd="16dp"
                                android:layout_toStartOf="@+id/btn_navigate_to_edit_profile"
                                android:text="@string/sample_id_text"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"
                                android:textStyle="italic" />

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/btn_navigate_to_edit_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:backgroundTint="@android:color/white"
                                android:contentDescription="@string/edit_profile_nav_content_desc"
                                android:src="@drawable/ic_edit_profile_24"
                                app:fabSize="mini" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_address_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:layout_marginTop="16dp">

                            <ImageView
                                android:id="@+id/sampleAddressIcon"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:contentDescription="@string/general_image_description"
                                android:src="@drawable/ic_house_24" />

                            <TextView
                                android:id="@+id/tv_profile_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@id/sampleAddressIcon"
                                android:text="@string/sample_address_text"
                                android:textSize="14sp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_email_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:layout_marginTop="16dp">

                            <ImageView
                                android:id="@+id/sampleEmailIcon"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/general_image_description"
                                android:src="@drawable/ic_mail_outline_24" />

                            <TextView
                                android:id="@+id/tv_profile_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@id/sampleEmailIcon"
                                android:text="@string/sample_email_text"
                                android:textSize="14sp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_phone_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:id="@+id/samplePhoneIcon"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/general_image_description"
                                android:src="@drawable/ic_phone_android_24" />

                            <TextView
                                android:id="@+id/tv_profile_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@id/samplePhoneIcon"
                                android:text="@string/sample_phone_text"
                                android:textSize="14sp" />

                        </RelativeLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:id="@+id/btn_navigate_to_address_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:layout_marginTop="10dp">

                            <ImageView
                                android:id="@+id/iv_navigate_to_address_list_icon"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/general_image_description"
                                android:src="@drawable/ic_keyboard_arrow_right_24" />

                            <TextView
                                android:id="@+id/navigateToAddressListText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="32dp"
                                android:layout_toStartOf="@+id/iv_navigate_to_address_list_icon"
                                android:text="@string/lbl_select_address_text"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />


                        </RelativeLayout>

                        <View
                            android:id="@+id/dividerLine2"
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginHorizontal="24dp"
                            android:layout_marginTop="10dp"
                            android:background="@android:color/darker_gray" />

                        <RelativeLayout
                            android:id="@+id/btn_navigate_to_transfer_method"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:layout_marginTop="10dp">

                            <ImageView
                                android:id="@+id/iv_navigate_to_transfer_method_icon"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/general_image_description"
                                android:src="@drawable/ic_keyboard_arrow_right_24" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="32dp"
                                android:layout_toStartOf="@+id/iv_navigate_to_transfer_method_icon"
                                android:text="@string/current_transfer_method_title"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/dividerLine3"
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginHorizontal="24dp"
                            android:layout_marginTop="10dp"
                            android:background="@android:color/darker_gray" />

                        <RelativeLayout
                            android:id="@+id/btn_keamananAndaButtonText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:layout_marginTop="10dp">

                            <ImageView
                                android:id="@+id/keamananAndaIcon"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/general_image_description"
                                android:src="@drawable/ic_keyboard_arrow_right_24" />

                            <TextView
                                android:id="@+id/keamananAndaButtonText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="32dp"
                                android:layout_toStartOf="@+id/keamananAndaIcon"
                                android:text="@string/keamanan_anda"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />


                        </RelativeLayout>

                        <View
                            android:id="@+id/line"
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginHorizontal="24dp"
                            android:layout_marginTop="10dp"
                            android:background="@android:color/darker_gray" />

                        <RelativeLayout
                            android:id="@+id/btn_show_TNC_dialog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:id="@+id/TNCbuttonicon"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/general_image_description"
                                android:src="@drawable/ic_keyboard_arrow_right_24" />

                            <TextView
                                android:id="@+id/TNCbuttonText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="32dp"
                                android:text="Term And Condition"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/signOutButton"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:text="@string/sign_out_button_text"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    app:cornerRadius="16dp" />

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

</layout>